# Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# ============================================================================
# LLM API Keys
# ============================================================================
# Anthropic Claude API (primary - used in Spotify's implementation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API (optional - for LLM judge or alternative agent)
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# Application Configuration
# ============================================================================
# Configuration file paths
CONFIG_PATH=fleet-manager/config.yaml
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Agent settings
AGENT_MAX_TURNS=10
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT=300  # seconds

# ============================================================================
# MLflow Tracking (Observability)
# ============================================================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=background-coding-agents
ML FLOW_TRACKING_USERNAME=  # Optional
MLFLOW_TRACKING_PASSWORD=  # Optional

# ============================================================================
# Cloud/Storage Configuration (if using)
# ============================================================================
# GCP (Google Cloud Platform)
# GCP_PROJECT_ID=your-gcp-project
# GCP_CREDENTIALS_PATH=/path/to/credentials.json
# GCP_BUCKET=your-gcs-bucket

# AWS (Amazon Web Services)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-s3-bucket

# Azure
# AZURE_STORAGE_CONNECTION_STRING=your-connection-string
# AZURE_CONTAINER=your-container

# ============================================================================
# Database Configuration (if needed)
# ============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Verification Settings
# ============================================================================
# PLC Compiler paths (vendor-specific)
# SIEMENS_TIA_PATH=/path/to/TIA/Portal/
# ROCKWELL_STUDIO5000_PATH=/path/to/Studio5000/
# CODESYS_PATH=/path/to/CODESYS/

# Simulation settings
# PLCSIM_ENABLED=false
# PLCSIM_PATH=/path/to/PLCSIM/Advanced/

# ============================================================================
# Security Settings
# ============================================================================
# Secret key for session management (generate with: python -c "import secrets; print(secrets.token_hex(32))")
# SECRET_KEY=your-secret-key-here

# Allowed hosts (comma-separated)
# ALLOWED_HOSTS=localhost,127.0.0.1

# CORS settings
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# Feature Flags
# ============================================================================
# Enable/disable features
ENABLE_TELEMETRY=true
ENABLE_MLFLOW_TRACKING=true
ENABLE_SAFETY_VERIFIER=true
ENABLE_SIMULATION_VERIFIER=false  # Enable when simulation environment available

# ============================================================================
# Performance Settings
# ============================================================================
# Concurrency limits
MAX_CONCURRENT_SITES=5
MAX_CONCURRENT_VERIFIERS=3

# Timeouts (seconds)
COMPILER_TIMEOUT=300
SAFETY_VERIFICATION_TIMEOUT=600
SIMULATION_TIMEOUT=900

# ============================================================================
# Development/Testing Settings
# ============================================================================
# Mock mode (use mocked LLM/compiler responses for testing)
USE_MOCK_LLM=true
USE_MOCK_COMPILER=true
USE_MOCK_SAFETY_VERIFIER=false

# Test database
# TEST_DATABASE_URL=postgresql://user:password@localhost:5432/test_db

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_FORMAT=json  # json or text
LOG_FILE=logs/fleet-manager.log
LOG_ROTATION=10MB
LOG_RETENTION=30  # days

# Structured logging settings
LOG_INCLUDE_TIMESTAMP=true
LOG_INCLUDE_CORRELATION_ID=true
LOG_INCLUDE_CALLER=false

# ============================================================================
# Notifications (optional)
# ============================================================================
# Slack webhook for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email settings
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM=noreply@example.com
# ALERT_EMAIL=alerts@example.com

# ============================================================================
# Rate Limiting
# ============================================================================
# API rate limits
ANTHROPIC_RPM=50  # Requests per minute
OPENAI_RPM=60
LLM_RETRY_DELAY=1  # seconds
LLM_MAX_RETRIES=3

# ============================================================================
# Cache Settings
# ============================================================================
CACHE_ENABLED=true
CACHE_TTL=3600  # seconds
# CACHE_REDIS_URL=redis://localhost:6379/1

# ============================================================================
# Notes
# ============================================================================
# 1. Never commit .env files to version control
# 2. Add .env to .gitignore
# 3. Use different .env files for different environments
# 4. Rotate API keys regularly
# 5. Use environment-specific values in CI/CD pipelines
